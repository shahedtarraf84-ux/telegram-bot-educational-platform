{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python -m uvicorn server:app --host 0.0.0.0 --port ${PORT:-8080}",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/"
  }
}
