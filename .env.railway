# Railway Environment Variables Template
# Copy these to Railway dashboard and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_ID=your_admin_telegram_id

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=educational_platform

# Admin Dashboard
SECRET_KEY=your_secret_key_here_minimum_32_characters
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# Payment Methods
SHAP_CASH_NUMBER=+963999999999
HARAM_NUMBER=+963999999999

# App Settings
DEBUG=False
HOST=0.0.0.0
PORT=8000

# URLs (Update these after getting your Railway domain)
BOT_WEBHOOK_URL=https://your-railway-app-name.up.railway.app/webhook
DASHBOARD_URL=https://your-railway-app-name.up.railway.app

# Python Settings
PYTHONUNBUFFERED=1
